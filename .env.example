# Database Configuration
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/countries_db

# SSL Configuration (Optional)
# For cloud platforms like Leapcell: Set SSL_VERIFY=False (they handle SSL internally)
# For Aiven with certificate: Set SSL_CERT_PATH=ca.pem and SSL_VERIFY=True
SSL_CERT_PATH=
SSL_VERIFY=False

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# External APIs
RESTCOUNTRIES_API_URL=https://restcountries.com/v2/all?fields=name,capital,region,population,flag,currencies
EXCHANGE_API_URL=https://open.er-api.com/v6/latest/USD

# API Configuration
API_TIMEOUT=30
CACHE_DIR=app/cache

# Environment
ENVIRONMENT=development